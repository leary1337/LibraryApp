<div class="grid-x grid-padding-x">
  <div class="large-12 cell">
    <h3>Список читателей</h3>

    <a href="/readers/new" class="button">
      Добавить
    </a>

    <a href="/" class="button secondary">
      В главное меню
    </a>
  </div>

  <% if @readers.size == 0 %>
    <div class="cell large-12 callout warning">
      Нет читателей
    </div>
  <% else%>
    <table>
      <thead>
        <tr>
          <th>ФИО</th>
          <th>Дата рождения</th>
          <th>Количество взятых книг</th>
        </tr>
      </thead>

      <tbody>
        <% @readers.each do |reader| %>
          <tr>
            <td><a href="/reader/<%= reader.id %>"><%= reader.full_name %></a></td>
            <td><%= reader.date_of_birth %></td>
            <td><%= reader.borrowed_books&.size || 0 %> шт.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>